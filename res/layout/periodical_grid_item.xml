<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PeriodicalGridItemLayout"
    android:layout_width="75dip"
    android:layout_height="120dip"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="1dip" >

    <ImageView
        android:id="@+id/periodical_grid_item_img"
        android:layout_width="75dip"
        android:layout_height="70dip"
        android:maxHeight="70dip"
        android:maxWidth="75dip"
        android:minHeight="75dip"
        android:padding="0dip"
        android:src="@drawable/generic_book_cover" />

    <TextView
        android:id="@+id/periodical_grid_item_title"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:maxWidth="75dip"
        android:textColor="@android:color/black"
        android:textSize="6pt"
        android:textStyle="normal|bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/periodical_grid_item_author"
        android:layout_width="75dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:maxWidth="75dip"
        android:textColor="@android:color/black"
        android:textSize="6pt"
        android:textStyle="normal"
        android:typeface="serif" />

</LinearLayout>